/**
 * @fileOverview
 */
package (
    Debugger,
    
    isComplete,
    addBreakpoint)
with
    import 'amulet/record' record,
    import 'sheut/fun' {concat}
in {

/* Debugger
 ******************************************************************************/
/**
 * State of a debugger object.
 */
Debugger = record.declare(null, [
    'debug',
    'breakpoints']);

Debugger.initial = Debugger.create(null, []);

/* Operations
 ******************************************************************************/
/**
 * 
 */
isComplete = \d ->
    (d.debug && d.debug.complete);

/**
 * 
 */
var getValue = \d ->
    (d.debug && d.debug.complete ?
        d.debug.k :
        null);

/**
 * 
 */
addBreakpoint = \d, breakpoint ->
    d.setBreakpoints(
        concat(
            d.breakpoints,
            breakpoint));

}